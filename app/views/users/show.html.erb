<div class='contact-info'>
  <h1 class='user-name'><%= "#{@user.first_name} #{@user.last_name}" %></h1>
  <p>Phone: <%= @user.phone %></p>
  <p>Email: <%= @user.email %></p>
  <p>Role: <%= @user.role %></p>
  <p><%= link_to "Edit Profile", edit_user_path(@user), :class => 'edit-links' %></p>
</div>

<div class='user-jobs'>
  <h2 class='section-header'><%= @user.first_name %>'s Jobs:</h2>
  <% @user.unique_events.each do |event| %>
    <%= render event %>
    <% event.team.each do |team| %>
      <% team.jobs.each do |job| %>
        <% if job.owned_by?(@user) %>
          <%= render job %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

<hr class='style-four'>

<div class='all-jobs'><!--fixme change style name to all-events-->
  <% if current_user == @user %>
    <h2 class='section-header'>All Upcoming Chicktech Events:</h2>
    <% if @events && %>
      <% @events.each do |event| %>
        <%= render event %> 
        <hr class='style-four'>
      <% end %>  
    <% end %>
  <% end %>
</div>
