<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <%= f.hidden_field :team_id %>
  <%= f.submit :class => "create-button" %>
<% end %>
